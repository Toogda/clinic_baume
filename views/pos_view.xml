      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="clinic_facture_tree"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Cliquer ici pour ajouter une facture
        </p>
      </field>
    </record>

   

